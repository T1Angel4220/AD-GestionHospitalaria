{
  "info": {
    "_postman_id": "6b0a1e1f-3a1d-4c1f-9d7a-00f0a000a001",
    "name": "Hospital Central - Consultas API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "CRUD de consultas médicas aislado por hospital usando header X-Centro-Id."
  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/ping",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "ping"
          ]
        }
      }
    },
    {
      "name": "Crear consulta",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-Centro-Id",
            "value": "{{centroId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id_medico\": 1,\n  \"paciente_nombre\": \"Juan\",\n  \"paciente_apellido\": \"Pérez\",\n  \"fecha\": \"2025-09-19 10:30:00\",\n  \"motivo\": \"Dolor de cabeza\",\n  \"diagnostico\": \"Migraña\",\n  \"tratamiento\": \"Analgésicos\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/consultas",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "consultas"
          ]
        }
      }
    },
    {
      "name": "Listar consultas (filtros opcionales)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-Centro-Id",
            "value": "{{centroId}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/consultas?medico=1&q=Dolor",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "consultas"
          ],
          "query": [
            { "key": "medico", "value": "1" },
            { "key": "q", "value": "Dolor" }
          ]
        }
      }
    },
    {
      "name": "Obtener consulta por id",
      "request": {
        "method": "GET",
        "header": [
          { "key": "X-Centro-Id", "value": "{{centroId}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/consultas/{{consultaId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "consultas",
            "{{consultaId}}"
          ]
        }
      }
    },
    {
      "name": "Actualizar consulta",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-Centro-Id", "value": "{{centroId}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"diagnostico\": \"Cefalea tensional\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/consultas/{{consultaId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "consultas",
            "{{consultaId}}"
          ]
        }
      }
    },
    {
      "name": "Eliminar consulta",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "X-Centro-Id", "value": "{{centroId}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/consultas/{{consultaId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "consultas",
            "{{consultaId}}"
          ]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "centroId", "value": "1" },
    { "key": "consultaId", "value": "1" }
  ]
}


